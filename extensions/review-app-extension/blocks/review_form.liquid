{{ 'form.css' | asset_url | stylesheet_tag }}

{% assign productId = product.id %}
{% assign shopName = shop.name %}
{% assign productName = product.title %}


<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Your Page Title</title>
</head>

<body>


<div id='review-section'>
    <div id='titlebar'>
        <h2>
            CUSTOMER REVIEWS
            <p id='api'></p>
            <button onclick="getReviews('{{shopName}}',{{productId}})"> test </button>
        </h2>
    </div>
        <h3 id='average-rating'> </h3><br>
    <div id='review-info-bar'>
        <h3 id='review-count'> </h3>
        <a href='#' onclick="handleButtonClick(event)" id='write-review-link'><h3> Write a review</h3></a>
    </div>

    <div id='submit-message'>
     <hr/>
        <h3>
            WRITE A REVIEW
        </h3>
        <p> thank you for submitting a review !!</p>
    </div>    

    <div id='form-section'>
    <form>
    <hr/>
        <h3>
            WRITE A REVIEW
        </h3>
        <label >Name</label>
        <Input type='text' placeholder='Enter your name'  value ='' id='nameInput' autocomplete='off' class='input-box'/>
        <span id='nameErr' class='err'></span>
        <label >Email</label>
        <Input type='text' placeholder='johnsmith@example.com' id='emailInput' value='' autocomplete='off' class='input-box'/>
        <span id='emailErr' class='err'></span>

        <label >Rating</label>
         <div class="star-rating">
           <a href="#" class="star" data-rating="1">&#9733;</a>
            <a href="#" class="star" data-rating="2">&#9733;</a>
            <a href="#" class="star" data-rating="3">&#9733;</a>
            <a href="#" class="star" data-rating="4">&#9733;</a>
            <a href="#" class="star" data-rating="5">&#9733;</a>
        </div>
        <span id='ratingErr' class='err'></span>

        <label >Review Title</label>
        <Input type='text' placeholder='Give your review a title' id='reviewTitleInput' value='' autocomplete='off' class='input-box'/>
        <span id='titleErr' class='err'></span>
        <label >Body of Review (1500)</label>
        <textarea  rows='10'  id='reviewBodyInput' placeholder='Write your comments here' class='input-box'></textarea>
        <span id='bodyErr' class='err'></span>
        <div id='submit-btn'>
            <button type='submit' onclick="handleSubmit(event,{{productId}},'{{shopName}}','{{productName}}')" class='btn button' ><b>Submit Review</b></button>
        </div>
    </form>
    </div>

    <div id='review-listing'>
    </div>
   
</div>
 
  <script src="{{ '../assets/form.js' | asset_url }}">
  
  </script>
  <script>
     document.addEventListener('DOMContentLoaded', function() {
      getReviews('{{ shopName }}', {{ productId }}); // Replace with Liquid variables
    });
  </script>


</body>
</html>








{% schema %}
{
  "name": "form",
  "target": "section",
  "settings": [
    { "type": "product", "id": "product", "label": "product", "autofill": true },
    { "type": "color", "id": "colour", "label": "Star Colour", "default": "#ff0000" }
  ]
}
{% endschema %}